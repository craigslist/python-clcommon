# If ../clcommon/__init__.py exists, add ../ to the Python search path so
# that it will override whatever may be installed in the default Python
# search path.
package_dir=$(cd `dirname "$0"`; cd ..; pwd)
if [ -f "$package_dir/clcommon/__init__.py" ]
then
    PYTHONPATH="$package_dir:$PYTHONPATH"
    export PYTHONPATH
fi

exec /usr/bin/env python -u -m clcommon.profile "$@"
